<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:weightSum="1">

	<LinearLayout
	    android:id="@+id/linearLayout2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#E8791D" >

		<TextView android:layout_weight="0.96" android:id="@+id/titleBar"
			android:layout_width="match_parent"
			android:layout_height="match_parent" android:background="#E8791D" android:textColor="#000000" android:gravity="fill" android:text="標記辨識輔助定位 - 使用者端" android:textSize="20dp"></TextView>

		<ImageButton
		    android:id="@+id/scanBtn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/scanicon" >
</ImageButton>
	</LinearLayout>
	<LinearLayout android:id="@+id/linearLayout1"
		android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#FFFE5F">

		<TextView
		    android:id="@+id/hint"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="您的位置: "
		    android:textSize="15dp" />

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/mapTitleText"
			android:text="地圖名稱" android:textSize="15dp"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/arrow"
			android:text="→" android:textSize="15dp"></TextView>
		<TextView android:layout_gravity="center_horizontal"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="定位點名稱" android:textSize="15dp" android:id="@+id/pointTitleText"></TextView>
	</LinearLayout>
	<proj.Position.MyWebView android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:id="@+id/mainMapView"></proj.Position.MyWebView>
</LinearLayout>
